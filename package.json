{
  "name": "facit",
  "version": "0.0.1",
  "private": true,
  "description": "Sant eller Falskt - Multiplayer quiz game",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter './packages/*' --parallel run dev",
    "dev:server": "pnpm --filter server run dev",
    "dev:client": "pnpm --filter client run dev",
    "build": "pnpm --filter client run build && pnpm --filter server run build",
    "start": "node packages/server/dist/index.js",
    "typecheck": "pnpm --filter './packages/*' run typecheck",
    "lint": "pnpm --filter './packages/*' run lint"
  },
  "engines": {
    "node": ">=20"
  }
}
